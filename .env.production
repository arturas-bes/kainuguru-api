# Kainuguru API Production Environment Configuration

# Server Configuration
ENV=production
PORT=8080
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
BODY_LIMIT=4MB

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kainuguru
DB_USER=kainuguru
# DB_PASSWORD=<set-in-deployment>
DB_SSL_MODE=require
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=<set-in-deployment>
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# JWT Authentication
# JWT_SECRET=<set-in-deployment>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=24h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration (Production SMTP)
# SMTP_HOST=<production-smtp-host>
# SMTP_PORT=587
# SMTP_USERNAME=<smtp-username>
# SMTP_PASSWORD=<smtp-password>

# External APIs
# OPENAI_API_KEY=<production-openai-key>

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Security
CORS_ORIGINS=https://kainuguru.lt,https://www.kainuguru.lt
HTTPS_ONLY=true
SECURE_COOKIES=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Cloud Storage (if using)
# AWS_REGION=eu-west-1
# AWS_S3_BUCKET=kainuguru-storage
# AWS_S3_BACKUP_BUCKET=kainuguru-backups